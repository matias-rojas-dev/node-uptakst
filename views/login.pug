doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 Iniciar sesión en upTask

            if error 
                p.alerta.error= error

            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")   
                .campo 
                    label(for="email") E-mail:
                    input(type="text" name="email" placeholder="Tu correo" value= email )
                .campo 
                    label(for="password") Password 
                    input(type="password" name="password" placeholder="Password" value= password)
                .campo.enviar
                    input.boton(type="submit" value="Iniciar sesión")
                .campo 
                    a(href="/crear-cuenta" ) Crear cuenta
