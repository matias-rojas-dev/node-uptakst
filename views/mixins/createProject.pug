mixin createProject(project = {})
    form.agregar-proyecto(action=`/nuevo-proyecto/${project.id || ''}` method="POST" )
        .campo 
            label(for="nombre") Nombre Proyecto:
            input(value=project.nombre type="text" id="nombre" name="nombre" placeholder="Nombre proyecto")
        .campo.enviar
            input(type="submit" value=`${project.nombre ? 'Guardar' : 'Agregar'}` class="boton") 
                