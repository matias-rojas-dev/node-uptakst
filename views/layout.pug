doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="/css/app.css")
        link(rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css' integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p' crossorigin='anonymous')

        title #{nombrePagina}
    body 
        header.barra 
            h1 UpTask - Administrador de proyectos #{year}
            a(href="") Cerrar sesi√≥n 

        main.contenedor 
            aside(class="contenedor-proyectos")
                .panel.crear-proyecto 
                    a(href="/nuevo-proyecto" class="boton") Nuevo proyecto
                        span +

                .panel.lista-proyectos 
                    h2 Proyectos
                    ul#proyectos.proyectos 
                        if(allProjects.length)
                            each project in allProjects
                                li
                                    a(href=`/projects/${project.url}`)= project.nombre
                    
            block contenido

            //- pre= varDump(allProjects)
        script(src="/dist/bundle.js")